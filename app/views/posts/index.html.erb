<p id="notice"><%= notice %></p>

<h1>Blogposts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titel</th>
      <th>Beitrag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
